{
  "manifest_version": 3,
  "name": "Resume AutoFill",
  "version": "1.0.0",
  "description": "Auto-fill job applications with your claude-resume profile data",
  "permissions": [
    "storage",
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "https://*.myworkdayjobs.com/*",
    "https://*.workday.com/*",
    "https://*.greenhouse.io/*",
    "https://*.lever.co/*",
    "https://*.taleo.net/*",
    "https://*.icims.com/*",
    "https://*.smartrecruiters.com/*",
    "https://*.jobvite.com/*",
    "https://*.breezy.hr/*",
    "https://*.ashbyhq.com/*"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": [
        "https://*.myworkdayjobs.com/*",
        "https://*.workday.com/*",
        "https://*.greenhouse.io/*",
        "https://*.lever.co/*",
        "https://*.taleo.net/*",
        "https://*.icims.com/*",
        "https://*.smartrecruiters.com/*",
        "https://*.jobvite.com/*",
        "https://*.breezy.hr/*",
        "https://*.ashbyhq.com/*"
      ],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}
